<h1><%= @post.title %></h1>

<div class="row">

  <div class="col-md-8">
    <p class="lead"><%= @post.body %></p>
  </div>

  <div class="col-md-4">
    <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_post_path, class: 'btn btn-success' %>
    <% end %>

    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", @topic, method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this topic?' %>
    <% end %>

  </div>
</div>
