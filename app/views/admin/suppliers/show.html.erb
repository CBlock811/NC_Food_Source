<h1><%= @supplier.name %></h1>

<div class="row">
  <div class="span8">
    <p class="lead"><%= @supplier.description %></p>
    <% @products.each do |product| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= product.name %>: <%= product.price %> <%= link_to "Delete", [@supplier, product], method: :delete, class: 'btn btn-danger', confirm: "Are you sure you want to delete this product?" %></p>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Edit", edit_admin_supplier_path(@supplier), class: 'btn btn-primary' %>
  <%= link_to "Delete", @supplier, method: :delete, class: 'btn btn-danger', confirm: "Are you sure you want to delete this suppier?" %>
  <%= link_to "New Product", new_supplier_product_path(@supplier), class: 'btn btn-success' %>
</div>
