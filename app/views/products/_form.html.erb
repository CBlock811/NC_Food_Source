<%= form_for [@supplier, @product] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter product name" %><br>
  </div>
  
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control', placeholder: "Enter price" %><br>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>